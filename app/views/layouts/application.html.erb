<!DOCTYPE html>
<html>
<head>
  <title>Myblog</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- グローバルナビゲーション部分 -->
<div id="wrap">


	<nav class="navbar navbar-default navbar-fixed-top">

		<div id="nav">

			<div class="navbar-header">
				<button class="navbar-toggle" data-toggle="collapse" data-target=".target">
					<span class="icon_bar"></span>
					<span class="icon_bar"></span>
					<span class="icon_bar"></span>
				</button>
				<a class="navbar-brand" href="/articles">Home</a>
			</div>


			<div class="collapse navbar-collapse target">
				<ul class="nav navbar-nav">
					<li><%= link_to '記事を作成する', new_article_path %></li>
					<li><%= link_to '過去の記事を見る', articles_path %></li>
					
					<li>
						<%= form_tag( search_members_path, id: 'sea_form', 
						class: "navbar-form") do %>
							<div class="form-group">
								<%= text_field_tag :search, @ot_mem, 
								class: "form-control", placeholder: "ユーザー名" %>
							</div>
							<div class="form-group">
								<%= submit_tag '検索', class: "btn btn-info"%>
							</div>
						<% end %>
					</li>

				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to 'ログアウト', { controller: :login, action: :logout } %></li>
				</ul>
			</div>
		</div>
	</nav>



	<!-- コンテンツ部分 -->
	<div id="contents">

		<%= yield %>

	</div><!-- #content -->

</div><!-- #wrap -->

</body>
</html>
